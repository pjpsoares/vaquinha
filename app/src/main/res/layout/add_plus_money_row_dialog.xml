<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <com.vaquinha.common.EditDateView
            android:id="@+id/money_date_input"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/money_value_input"
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size"
            android:inputType="numberDecimal"
            android:textStyle="bold"/>

        <EditText android:id="@+id/money_description_input"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:textSize="@dimen/font_size"
            android:singleLine="false"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/user_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton android:id="@+id/button_confirm"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:background="@drawable/button_confirm"/>

            <ImageButton android:id="@+id/button_cancel"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_cancel"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
